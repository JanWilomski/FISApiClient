<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Colors -->
    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#90caf9"/>
    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#42a5f5"/>
    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#1e88e5"/>

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#FFB74D"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#757575"/>
    <SolidColorBrush x:Key="InvertedTextBrush" Color="#212121"/>

    <!-- Background and Surface Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#121212"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#2C2C2C"/>
    <SolidColorBrush x:Key="SurfaceLightBrush" Color="#424242"/>

    <!-- Other Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#515151"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#616161"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#81C784"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#E57373"/>

</ResourceDictionary>
