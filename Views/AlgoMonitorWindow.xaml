<Window x:Class="FISApiClient.Views.AlgoMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:viewModels="clr-namespace:FISApiClient.ViewModels"
        mc:Ignorable="d"
        Title="Monitor Strategii Algorytmicznych" 
        Height="400" 
        Width="750"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Window.DataContext>
        <viewModels:AlgoMonitorViewModel/>
    </Window.DataContext>

    <Grid Margin="15">
        <ListView ItemsSource="{Binding ActiveStrategies}" HorizontalContentAlignment="Stretch" Background="{DynamicResource SurfaceBrush}" BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}">
                                    <Run Text="{Binding Name, Mode=OneWay}"/>
                                    <Run Text="-"/>
                                    <Run Text="{Binding OrderParams.Instrument.Symbol, Mode=OneWay}"/>
                                    <Run Text="("/>
                                    <Run Text="{Binding StrategyId, Mode=OneWay}"/>
                                    <Run Text=")"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}">
                                    <Run Text="Status:"/>
                                    <Run Text="{Binding Status, Mode=OneWay}" FontWeight="SemiBold"/>
                                    <Run Text=" - "/>
                                    <Run Text="{Binding DetailedStatus, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock FontSize="11" Foreground="{DynamicResource DisabledTextBrush}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Start: {0:HH:mm:ss} | Last Update: {1:HH:mm:ss}">
                                            <Binding Path="StartTime" Mode="OneWay"/>
                                            <Binding Path="LastUpdateTime" Mode="OneWay"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                <TextBlock FontSize="12" Foreground="{DynamicResource PrimaryTextBrush}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Trades: {0} | PnL: {1:N2}">
                                            <Binding Path="TotalTrades" Mode="OneWay"/>
                                            <Binding Path="CurrentPnL" Mode="OneWay"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="{DynamicResource PrimaryTextBrush}" Text="{Binding Progress, Mode=OneWay, StringFormat='Progress: {0}'}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="Pauza"
                                        Command="{Binding DataContext.PauseStrategyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Background="{DynamicResource SecondaryAccentBrush}"
                                        Foreground="{DynamicResource InvertedTextBrush}"
                                        Padding="12,6"
                                        Margin="0,0,5,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRunning}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Paused">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="WznÃ³w"
                                        Command="{Binding DataContext.ResumeStrategyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Background="{DynamicResource SuccessBrush}"
                                        Foreground="{DynamicResource InvertedTextBrush}"
                                        Padding="12,6"
                                        Margin="0,0,5,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Paused">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Zatrzymaj"
                                        Command="{Binding DataContext.StopStrategyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Background="{DynamicResource ErrorBrush}"
                                        Foreground="{DynamicResource InvertedTextBrush}"
                                        Padding="12,6">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Stopped">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Error">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>

