<Window x:Class="Cross_FIS_API_1._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:Cross_FIS_API_1._2.ViewModels"
        mc:Ignorable="d"
        Title="FIS API Client - Połączenie MDS/SLC" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.DataContext>
        <viewmodels:ConnectionViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="6"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="6"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E53935"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C62828"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="8" 
                Padding="20"
                Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>
            
            <StackPanel>
                <TextBlock Text="FIS API Client" 
                          FontSize="28" 
                          FontWeight="Bold"
                          Foreground="#1976D2"
                          Margin="0,0,0,5"/>
                <TextBlock Text="Połączenie z serwerem Market Data (MDS/SLC)" 
                          FontSize="14" 
                          Foreground="#666666"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="30">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Connection Status -->
                    <Border Background="{Binding ConnectionStatusColor}" 
                            CornerRadius="6" 
                            Padding="15,10"
                            Margin="0,0,0,25">
                        <StackPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center">
                            <Ellipse Width="12" 
                                    Height="12" 
                                    Fill="White" 
                                    Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding ConnectionStatusText}" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"
                                      Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <!-- Connection Form -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- IP Address -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                  Text="Adres IP:" 
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,15"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding IsNotConnected}"
                                Padding="10"
                                FontSize="14"
                                Margin="0,0,0,15"
                                Style="{StaticResource ModernTextBox}"/>

                        <!-- Port -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                  Text="Port:" 
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,15"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding IsNotConnected}"
                                Padding="10"
                                FontSize="14"
                                Margin="0,0,0,15"
                                Style="{StaticResource ModernTextBox}"/>

                        <!-- User -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                  Text="Użytkownik:" 
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,15"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                Text="{Binding User, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding IsNotConnected}"
                                Padding="10"
                                FontSize="14"
                                Margin="0,0,0,15"
                                Style="{StaticResource ModernTextBox}"/>

                        <!-- Password -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                  Text="Hasło:" 
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,15"/>
                        <PasswordBox Grid.Row="3" Grid.Column="1" 
                                    x:Name="PasswordBox"
                                    IsEnabled="{Binding IsNotConnected}"
                                    Padding="10"
                                    FontSize="14"
                                    Margin="0,0,0,15"
                                    PasswordChanged="PasswordBox_PasswordChanged"/>

                        <!-- Node -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                  Text="Node:" 
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"
                                  Margin="0,0,0,15"/>
                        <TextBox Grid.Row="4" Grid.Column="1" 
                                Text="{Binding Node, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding IsNotConnected}"
                                Padding="10"
                                FontSize="14"
                                Margin="0,0,0,15"
                                Style="{StaticResource ModernTextBox}"/>

                        <!-- Subnode -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                  Text="Subnode:" 
                                  VerticalAlignment="Center"
                                  FontWeight="SemiBold"
                                  Foreground="#333333"/>
                        <TextBox Grid.Row="5" Grid.Column="1" 
                                Text="{Binding Subnode, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding IsNotConnected}"
                                Padding="10"
                                FontSize="14"
                                Style="{StaticResource ModernTextBox}"/>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Margin="0,30,0,0">
                        <Button Content="Połącz" 
                               Command="{Binding ConnectCommand}"
                               Width="140"
                               Height="45"
                               Margin="0,0,15,0"
                               Style="{StaticResource PrimaryButton}"/>
                        
                        <Button Content="Rozłącz" 
                               Command="{Binding DisconnectCommand}"
                               Width="140"
                               Height="45"
                               Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#263238" 
                CornerRadius="6" 
                Padding="15,10"
                Margin="0,20,0,0">
            <TextBlock Text="{Binding StatusMessage}" 
                      Foreground="White"
                      FontSize="12"/>
        </Border>
    </Grid>
</Window>
