<Window x:Class="FISApiClient.Views.InstrumentListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Lista instrumentów - FIS API Client" 
        Height="700" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Button Styles -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#757575"/>
        </Style>

        <Style x:Key="SearchTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="White"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#1976D2"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="8" 
                Padding="20"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Lista instrumentów" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="#1976D2"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="Rynki: GPW (40), NewConnect (330), Catalyst (331), Structured Products (332)" 
                              FontSize="12" 
                              Foreground="#666666"
                              Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💡 Kliknij dwukrotnie na instrument aby zobaczyć szczegóły" 
                                  FontSize="11" 
                                  Foreground="#FF9800"
                                  FontStyle="Italic"
                                  Margin="0,0,10,0"/>
                        <TextBlock Text="•" 
                                  Foreground="#CCCCCC" 
                                  Margin="0,0,10,0"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="📊 Użyj Market Watch do real-time monitoringu" 
                                  FontSize="11" 
                                  Foreground="#4CAF50"
                                  FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Łącznie:" 
                              FontSize="13"
                              Foreground="#666666"
                              VerticalAlignment="Center"
                              Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TotalCount}" 
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="#1976D2"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    
                    <TextBlock Text="Wyświetlane:" 
                              FontSize="13"
                              Foreground="#666666"
                              VerticalAlignment="Center"
                              Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding FilteredCount}" 
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="#4CAF50"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="15"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Load Button -->
                <Button Grid.Column="0"
                       Content="🔄 Pobierz instrumenty"
                       Command="{Binding LoadInstrumentsCommand}"
                       Style="{StaticResource ActionButton}"
                       Margin="0"/>

                <!-- Search -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0">
                    <TextBlock Text="🔍 Szukaj:" 
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              FontSize="13"
                              Foreground="#666666"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            Width="300"
                            Style="{StaticResource SearchTextBox}"/>
                    <Button Content="✕"
                           Command="{Binding ClearSearchCommand}"
                           Style="{StaticResource SecondaryButton}"
                           Width="35"
                           Padding="0"
                           Margin="5,5,0,5"
                           ToolTip="Wyczyść wyszukiwanie"/>
                </StackPanel>

                <!-- Export Button -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="📊 Market Watch"
                           Command="{Binding OpenMarketWatchCommand}"
                           Style="{StaticResource ActionButton}"
                           Background="#4CAF50"
                           Margin="0,5,5,5"
                           ToolTip="Otwórz panel Market Watch">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#2E7D32"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#CCCCCC"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button Content="➕ Dodaj do Watch"
                           Command="{Binding AddToMarketWatchCommand}"
                           Style="{StaticResource ActionButton}"
                           Background="#FF9800"
                           Margin="0,5,10,5"
                           ToolTip="Dodaj wybrany instrument do Market Watch">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Margin="{TemplateBinding Padding}"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F57C00"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#EF6C00"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#CCCCCC"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button Content="📥 Eksportuj CSV"
                           Command="{Binding ExportToCsvCommand}"
                           Style="{StaticResource SecondaryButton}"
                           Margin="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Data Grid -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8" 
                Padding="10"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <!-- Loading Overlay -->
                <Border Background="#F0F0F0"
                       Opacity="0.8"
                       CornerRadius="8"
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⏳ Ładowanie..." 
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="#1976D2"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                                  FontSize="13"
                                  Foreground="#666666"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Instruments Grid -->
                <DataGrid ItemsSource="{Binding FilteredInstruments}"
                         SelectedItem="{Binding SelectedInstrument}"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         GridLinesVisibility="Horizontal"
                         AlternatingRowBackground="#F9F9F9"
                         RowHeight="35"
                         HeadersVisibility="Column"
                         CanUserResizeRows="False"
                         CanUserReorderColumns="True"
                         CanUserSortColumns="True"
                         MouseDoubleClick="DataGrid_MouseDoubleClick">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="GLID" 
                                          Binding="{Binding Glid}" 
                                          Width="120"
                                          FontFamily="Consolas"/>
                        
                        <DataGridTextColumn Header="Symbol" 
                                          Binding="{Binding Symbol}" 
                                          Width="120"
                                          FontWeight="SemiBold"
                                          Foreground="#1976D2"/>
                        
                        <DataGridTextColumn Header="Nazwa" 
                                          Binding="{Binding Name}" 
                                          Width="*"
                                          MinWidth="200"/>
                        
                        <DataGridTextColumn Header="ISIN" 
                                          Binding="{Binding ISIN}" 
                                          Width="140"
                                          FontFamily="Consolas"/>
                    </DataGrid.Columns>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#1976D2"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="BorderBrush" Value="#1565C0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="Foreground" Value="#000000"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="#263238" 
                CornerRadius="6" 
                Padding="15,10">
            <TextBlock Text="{Binding StatusMessage}" 
                      Foreground="White"
                      FontSize="12"/>
        </Border>
    </Grid>
</Window>
