<Window x:Class="FISApiClient.Views.AlgoStrategyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Strategie Algorytmiczne" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Card Style -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" 
                                    BlurRadius="10" 
                                    ShadowDepth="2" 
                                    Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Strategy Card Style -->
        <Style x:Key="StrategyCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                    <Setter Property="Background" Value="#F8FBFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Selected Strategy Card Style -->
        <Style x:Key="SelectedStrategyCard" TargetType="Border" BasedOn="{StaticResource StrategyCard}">
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Background" Value="#E3F2FD"/>
        </Style>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ParamTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardBorder}">
            <Grid>
                <StackPanel>
                    <TextBlock Text="⚡ Wybierz strategię algorytmiczną" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="#1976D2"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding InstrumentInfo}" 
                              FontSize="14" 
                              Foreground="#666666"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Strategy List -->
            <Border Grid.Column="0" Style="{StaticResource CardBorder}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="DOSTĘPNE STRATEGIE" 
                                  FontSize="13" 
                                  FontWeight="Bold"
                                  Foreground="#666666"
                                  Margin="0,0,0,15"/>

                        <ItemsControl ItemsSource="{Binding AvailableStrategies}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource StrategyCard}"
                                            MouseLeftButtonDown="Strategy_Click"
                                            Tag="{Binding}">
                                        <StackPanel>
                                            <Grid>
                                                <TextBlock Text="{Binding Name}" 
                                                          FontSize="16" 
                                                          FontWeight="Bold"
                                                          Foreground="#333333"/>
                                                <TextBlock Text="{Binding Category}" 
                                                          FontSize="10" 
                                                          Foreground="White"
                                                          Background="#FF9800"
                                                          Padding="6,2"
                                                          HorizontalAlignment="Right"
                                                          VerticalAlignment="Top"/>
                                            </Grid>
                                            <TextBlock Text="{Binding Description}" 
                                                      FontSize="12" 
                                                      Foreground="#666666"
                                                      TextWrapping="Wrap"
                                                      Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel - Strategy Configuration -->
            <Border Grid.Column="2" Style="{StaticResource CardBorder}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Strategy Info -->
                        <StackPanel Visibility="{Binding HasSelectedStrategy, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="{Binding SelectedStrategy.Name}" 
                                      FontSize="20" 
                                      FontWeight="Bold"
                                      Foreground="#1976D2"
                                      Margin="0,0,0,10"/>
                            
                            <TextBlock Text="{Binding SelectedStrategy.DetailedDescription}" 
                                      FontSize="13" 
                                      Foreground="#666666"
                                      TextWrapping="Wrap"
                                      Margin="0,0,0,20"/>

                            <!-- Order Parameters Section -->
                            <Border Background="#F5F5F5" 
                                   CornerRadius="6" 
                                   Padding="15"
                                   Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="PARAMETRY ZLECENIA" 
                                              FontSize="12" 
                                              FontWeight="Bold"
                                              Foreground="#666666"
                                              Margin="0,0,0,12"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Side -->
                                        <StackPanel Grid.Row="0" Grid.Column="0">
                                            <TextBlock Text="Kierunek:" FontSize="11" Foreground="#666666" Margin="0,0,0,5"/>
                                            <ComboBox SelectedValue="{Binding Side}" SelectedValuePath="Tag" FontSize="12" Padding="8,6">
                                                <ComboBoxItem Content="Kupno" Tag="Buy"/>
                                                <ComboBoxItem Content="Sprzedaż" Tag="Sell"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <!-- Quantity -->
                                        <StackPanel Grid.Row="0" Grid.Column="2">
                                            <TextBlock Text="Całkowita ilość:" FontSize="11" Foreground="#666666" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding TotalQuantity, UpdateSourceTrigger=PropertyChanged}" 
                                                    Style="{StaticResource ParamTextBox}"/>
                                        </StackPanel>

                                        <!-- Limit Price -->
                                        <StackPanel Grid.Row="2" Grid.Column="0">
                                            <TextBlock Text="Cena limit:" FontSize="11" Foreground="#666666" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding LimitPrice, UpdateSourceTrigger=PropertyChanged}" 
                                                    Style="{StaticResource ParamTextBox}"/>
                                        </StackPanel>

                                        <!-- Order Type -->
                                        <StackPanel Grid.Row="2" Grid.Column="2">
                                            <TextBlock Text="Typ zlecenia:" FontSize="11" Foreground="#666666" Margin="0,0,0,5"/>
                                            <ComboBox SelectedValue="{Binding OrderType}" SelectedValuePath="Tag" FontSize="12" Padding="8,6">
                                                <ComboBoxItem Content="Limit" Tag="Limit"/>
                                                <ComboBoxItem Content="Market" Tag="Market"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Strategy Parameters Section -->
                            <Border Background="#E3F2FD" 
                                    CornerRadius="6" 
                                    Padding="15"
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="PARAMETRY STRATEGII" 
                                               FontSize="12" 
                                               FontWeight="Bold"
                                               Foreground="#1976D2"
                                               Margin="0,0,0,12"/>

                                    <!-- POV Strategy Parameters -->
                                    <StackPanel>
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedStrategy.Id}" Value="pov">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>

                                        <TextBlock Text="Udział w wolumenie (%):" 
                                                   FontSize="11" 
                                                   Foreground="#666666" 
                                                   Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding ParticipationRate, UpdateSourceTrigger=PropertyChanged}" 
                                                 Style="{StaticResource ParamTextBox}"/>
                                    </StackPanel>

                                    <!-- Placeholder for other strategies -->
                                    <TextBlock FontSize="12" 
                                               Foreground="#666666"
                                               FontStyle="Italic"
                                               TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding SelectedStrategy.Id}" Value="pov">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="Brak dodatkowych parametrów dla wybranej strategii."/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <!-- Strategy Info -->
                            <Border Background="#FFF3E0" 
                                   CornerRadius="6" 
                                   Padding="12"
                                   Margin="0,0,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ℹ️" 
                                              FontSize="16" 
                                              Margin="0,0,10,0"
                                              VerticalAlignment="Top"/>
                                    <TextBlock FontSize="11" 
                                              Foreground="#666666"
                                              TextWrapping="Wrap">
                                        <Run Text="Strategia będzie automatycznie zarządzać wysyłaniem zleceń zgodnie z wybranymi parametrami. "/>
                                        <Run Text="Możesz zatrzymać strategię w dowolnym momencie." FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Placeholder when no strategy selected -->
                        <StackPanel Visibility="{Binding HasNoSelectedStrategy, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock Text="📊" 
                                      FontSize="48" 
                                      HorizontalAlignment="Center"
                                      Margin="0,0,0,15"
                                      Opacity="0.3"/>
                            <TextBlock Text="Wybierz strategię z listy" 
                                      FontSize="16" 
                                      Foreground="#999999"
                                      HorizontalAlignment="Center"/>
                            <TextBlock Text="aby zobaczyć szczegóły i parametry" 
                                      FontSize="13" 
                                      Foreground="#BBBBBB"
                                      HorizontalAlignment="Center"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom Actions -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="2"
                   Content="Anuluj"
                   Command="{Binding CancelCommand}"
                   Style="{StaticResource SecondaryButton}"
                   Width="120"/>

            <Button Grid.Column="4"
                   Content="▶ Uruchom strategię"
                   Command="{Binding StartStrategyCommand}"
                   Style="{StaticResource PrimaryButton}"
                   Width="180"
                   IsEnabled="{Binding CanStartStrategy}"/>
        </Grid>
    </Grid>
</Window>