<Window x:Class="FISApiClient.Views.MarketWatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Market Watch - Real-time Monitor" 
        Height="700" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        Closing="Window_Closing">

    <Window.Resources>
        <!-- Styl dla kart -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla przycisków -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla DataGrid -->
        <Style x:Key="MarketWatchDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F0F0F0"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="RowHeight" Value="35"/>
        </Style>

        <!-- Styl dla nagłówków kolumn -->
        <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Styl dla komórek -->
        <Style x:Key="CellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="#000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Styl dla tekstów w komórkach - wyrównane do prawej (dla liczb) -->
        <Style x:Key="RightAlignedCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>

        <!-- Styl dla tekstów w komórkach - wycentrowane -->
        <Style x:Key="CenterAlignedCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Market Watch - Monitor Rynkowy" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="#1976D2"
                              Margin="0,0,0,5"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💡 Dodaj instrumenty z Listy Instrumentów" 
                                  FontSize="11" 
                                  Foreground="#FF9800"
                                  FontStyle="Italic"
                                  Margin="0,0,10,0"/>
                        <TextBlock Text="•" 
                                  Foreground="#CCCCCC" 
                                  Margin="0,0,10,0"
                                  VerticalAlignment="Center"/>
                        <TextBlock Text="Dane aktualizują się automatycznie" 
                                  FontSize="11" 
                                  Foreground="#4CAF50"
                                  FontStyle="Italic"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Horizontal">
                    <Border Background="{Binding ConnectionStatusColor}" 
                           CornerRadius="4" 
                           Padding="10,5"
                           Margin="0,0,15,0">
                        <TextBlock Text="{Binding ConnectionStatusText}" 
                                  Foreground="White"
                                  FontWeight="SemiBold"
                                  FontSize="12"/>
                    </Border>
                    
                    <Border Background="#2196F3" 
                           CornerRadius="5" 
                           Padding="12,6"
                           Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" 
                                      FontSize="14"
                                      Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding InstrumentCount}" 
                                      Foreground="White"
                                      FontWeight="Bold"
                                      FontSize="16"/>
                            <TextBlock Text=" instrumentów" 
                                      Foreground="White"
                                      FontSize="12"
                                      Margin="3,0,0,0"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="⚡" 
                              FontSize="20"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                              FontSize="13"
                              Foreground="#666666"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="🔄 Odśwież"
                           Command="{Binding RefreshAllCommand}"
                           Style="{StaticResource ActionButton}"
                           Margin="0,0,10,0"/>
                    
                    <Button Content="🗑️ Usuń"
                           Command="{Binding RemoveInstrumentCommand}"
                           Style="{StaticResource WarningButton}"
                           Margin="0,0,10,0"/>
                    
                    <Button Content="❌ Wyczyść"
                           Command="{Binding ClearAllCommand}"
                           Style="{StaticResource DangerButton}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid z instrumentami -->
        <Border Grid.Row="2" Style="{StaticResource CardBorder}" Padding="0" Margin="0,0,0,0">
            <DataGrid x:Name="InstrumentsDataGrid"
                     ItemsSource="{Binding WatchedInstruments}"
                     SelectedItem="{Binding SelectedInstrument}"
                     Style="{StaticResource MarketWatchDataGrid}"
                     IsReadOnly="True">
                
                <DataGrid.Columns>
                    <!-- Symbol -->
                    <DataGridTextColumn Header="Symbol" 
                                       Binding="{Binding Symbol}"
                                       Width="100"
                                       HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                       CellStyle="{StaticResource CellStyle}"
                                       IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#1976D2"/>
                                <Setter Property="FontSize" Value="13"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Nazwa -->
                    <DataGridTextColumn Header="Nazwa" 
                                       Binding="{Binding Name}"
                                       Width="200"
                                       HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                       CellStyle="{StaticResource CellStyle}"
                                       IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                <Setter Property="ToolTip" Value="{Binding Name}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- Bid Quantity -->
                    <DataGridTextColumn Header="Bid Vol" 
                                        Binding="{Binding BidQuantityFormatted}"
                                        Width="80"
                                        HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                        CellStyle="{StaticResource CellStyle}"
                                        ElementStyle="{StaticResource RightAlignedCell}"
                                        IsReadOnly="True"/>

                    <!-- Bid Price with Flash Effect -->
                    <DataGridTemplateColumn Header="Bid" 
                                          Width="80"
                                          HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                          CellStyle="{StaticResource CellStyle}"
                                          IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding BidPriceFlashColor}" 
                                       CornerRadius="3"
                                       Padding="5,2">
                                    <TextBlock Text="{Binding BidPriceFormatted}"
                                              HorizontalAlignment="Right"
                                              Margin="0,0,10,0"
                                              FontFamily="Consolas"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    

                    <!-- Ask Price with Flash Effect -->
                    <DataGridTemplateColumn Header="Ask" 
                                          Width="80"
                                          HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                          CellStyle="{StaticResource CellStyle}"
                                          IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding AskPriceFlashColor}" 
                                       CornerRadius="3"
                                       Padding="5,2">
                                    <TextBlock Text="{Binding AskPriceFormatted}"
                                              HorizontalAlignment="Right"
                                              Margin="0,0,10,0"
                                              FontFamily="Consolas"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Ask Quantity -->
                    <DataGridTextColumn Header="Ask Vol" 
                                       Binding="{Binding AskQuantityFormatted}"
                                       Width="80"
                                       HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                       CellStyle="{StaticResource CellStyle}"
                                       ElementStyle="{StaticResource RightAlignedCell}"
                                       IsReadOnly="True"/>

                    <!-- Last Price with Flash Effect -->
                    <DataGridTemplateColumn Header="Ostatnia" 
                                          Width="90"
                                          HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                          CellStyle="{StaticResource CellStyle}"
                                          IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="{Binding LastPriceFlashColor}" 
                                       CornerRadius="3"
                                       Padding="5,2">
                                    <TextBlock Text="{Binding LastPriceFormatted}"
                                              HorizontalAlignment="Right"
                                              Margin="0,0,10,0"
                                              FontFamily="Consolas"
                                              FontWeight="Bold"
                                              FontSize="13"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Change % -->
                    <DataGridTemplateColumn Header="Zmiana %" 
                                          Width="90"
                                          HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                          CellStyle="{StaticResource CellStyle}"
                                          IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding PercentageVariationFormatted}"
                                          Foreground="{Binding VariationColor}"
                                          FontWeight="Bold"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,10,0"
                                          FontFamily="Consolas"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Volume -->
                    <DataGridTextColumn Header="Wolumen" 
                                       Binding="{Binding VolumeFormatted}"
                                       Width="100"
                                       HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                       CellStyle="{StaticResource CellStyle}"
                                       ElementStyle="{StaticResource RightAlignedCell}"
                                       IsReadOnly="True"/>

                    <!-- Open -->
                    <DataGridTextColumn Header="Otwarcie" 
                                       Binding="{Binding OpenPriceFormatted}"
                                       Width="80"
                                       HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                       CellStyle="{StaticResource CellStyle}"
                                       ElementStyle="{StaticResource RightAlignedCell}"
                                       IsReadOnly="True"/>

                    <!-- High -->
                    <DataGridTextColumn Header="Max" 
                                       Binding="{Binding HighPriceFormatted}"
                                       Width="80"
                                       HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                       CellStyle="{StaticResource CellStyle}"
                                       ElementStyle="{StaticResource RightAlignedCell}"
                                       IsReadOnly="True"/>

                    <!-- Low -->
                    <DataGridTextColumn Header="Min" 
                                       Binding="{Binding LowPriceFormatted}"
                                       Width="80"
                                       HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                       CellStyle="{StaticResource CellStyle}"
                                       ElementStyle="{StaticResource RightAlignedCell}"
                                       IsReadOnly="True"/>

                    <!-- Last Trade Time -->
                    <DataGridTextColumn Header="Czas transakcji" 
                                       Binding="{Binding LastTradeTime}"
                                       Width="110"
                                       HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                       CellStyle="{StaticResource CellStyle}"
                                       ElementStyle="{StaticResource CenterAlignedCell}"
                                       IsReadOnly="True"/>

                    <!-- Last Update -->
                    <DataGridTextColumn Header="Ostatnia aktual." 
                                       Binding="{Binding LastUpdateTimeFormatted}"
                                       Width="110"
                                       HeaderStyle="{StaticResource ColumnHeaderStyle}"
                                       CellStyle="{StaticResource CellStyle}"
                                       ElementStyle="{StaticResource CenterAlignedCell}"
                                       IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Footer z informacjami -->
        <Border Grid.Row="3" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="📈" FontSize="14" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Market Watch v1.0" 
                              FontSize="11" 
                              Foreground="#999999"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="⚡ Real-time updates aktywne" 
                              FontSize="11" 
                              Foreground="#4CAF50"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"/>
                    <TextBlock Text="|" 
                              Foreground="#CCCCCC" 
                              Margin="0,0,10,0"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="FIS API v3" 
                              FontSize="11" 
                              Foreground="#999999"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
