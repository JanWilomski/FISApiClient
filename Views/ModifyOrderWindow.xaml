<Window x:Class="FISApiClient.Views.ModifyOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:FISApiClient.Converters"
        mc:Ignorable="d"
        Title="Modyfikacja zlecenia" 
        Height="550" 
        Width="550"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>
        
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ComboStyle" TargetType="ComboBox">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#3498DB" CornerRadius="5" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="📝 MODYFIKACJA ZLECENIA" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="{Binding Instrument}" 
                           FontSize="14" 
                           Foreground="White" 
                           Opacity="0.9"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Original Order Info -->
                <Border Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="INFORMACJE O ZLECENIU" Style="{StaticResource SectionHeader}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Order ID:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding OrderId}" Style="{StaticResource ValueStyle}"/>
                                
                                <TextBlock Text="Exchange Number:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding ExchangeNumber}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Instrument:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding Instrument}" Style="{StaticResource ValueStyle}"/>
                                
                                <TextBlock Text="Side:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding Side}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Modification Form -->
                <Border Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="15">
                    <StackPanel>
                        <TextBlock Text="MODYFIKUJ PARAMETRY" Style="{StaticResource SectionHeader}"/>
                        
                        <!-- Quantity -->
                        <TextBlock Text="Ilość (Quantity):" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" 
                                     Text="{Binding NewQuantity, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource InputStyle}"
                                     Margin="0"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding OriginalQuantity, StringFormat='Oryginalna: {0}'}" 
                                       FontSize="11" 
                                       Foreground="#95A5A6" 
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </Grid>

                        <!-- Price -->
                        <TextBlock Text="Cena (Price):" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" 
                                     Text="{Binding NewPrice, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource InputStyle}"
                                     Margin="0"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding OriginalPrice, StringFormat='Oryginalna: {0:F2}'}" 
                                       FontSize="11" 
                                       Foreground="#95A5A6" 
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </Grid>

                        <!-- Validity -->
                        <TextBlock Text="Ważność (Validity):" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" 
                                      ItemsSource="{Binding Validities}"
                                      SelectedItem="{Binding NewValidity}"
                                      Style="{StaticResource ComboStyle}"
                                      Margin="0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding OriginalValidity, StringFormat='Oryginalna: {0}'}" 
                                       FontSize="11" 
                                       Foreground="#95A5A6" 
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#ECF0F1" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10"
                Margin="0,15,0,10"
                Visibility="{Binding IsModifying, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⟳" FontSize="16" Foreground="#3498DB" Margin="0,0,10,0">
                    <TextBlock.RenderTransform>
                        <RotateTransform Angle="0" CenterX="8" CenterY="8"/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="TextBlock.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(RotateTransform.Angle)"
                                                     From="0" To="360" Duration="0:0:1" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                <TextBlock Text="{Binding StatusMessage}" FontSize="13" Foreground="#34495E" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Anuluj" 
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource ActionButton}"
                    Background="#95A5A6"/>
            <Button Content="💾 Modyfikuj" 
                    Command="{Binding ModifyCommand}"
                    Style="{StaticResource ActionButton}"
                    Background="#27AE60"/>
        </StackPanel>
    </Grid>
</Window>