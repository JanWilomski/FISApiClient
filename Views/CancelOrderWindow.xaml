<Window x:Class="FISApiClient.Views.CancelOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Anulowanie zlecenia" 
        Height="500" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#E74C3C" CornerRadius="5" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="🗑️ ANULOWANIE ZLECENIA" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Sprawdź szczegóły przed anulowaniem" 
                           FontSize="12" 
                           Foreground="White" 
                           Opacity="0.9"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Padding="15">
                <StackPanel>
                    <TextBlock Text="SZCZEGÓŁY ZLECENIA" Style="{StaticResource SectionHeader}"/>
                    
                    <!-- Row 1 -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Order ID:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding OrderId}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Exchange Number:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding ExchangeNumber}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Row 2 -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Instrument:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Instrument}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Side:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Side}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Row 3 -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Ilość (Quantity):" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Quantity, StringFormat=N0}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Wykonane (Executed):" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding ExecutedQuantity, StringFormat=N0}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Row 4 -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Pozostałe (Remaining):" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding RemainingQuantity, StringFormat=N0}" 
                                       Style="{StaticResource ValueStyle}"
                                       Foreground="#E74C3C"
                                       FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Cena (Price):" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Price, StringFormat=F2}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Row 5 -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Typ (Modality):" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Modality}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Ważność (Validity):" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Validity}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Row 6 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Status:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding Status}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Czas zlecenia:" Style="{StaticResource LabelStyle}"/>
                            <TextBlock Text="{Binding OrderTime, StringFormat='HH:mm:ss'}" Style="{StaticResource ValueStyle}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#ECF0F1" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10"
                Margin="0,15,0,10"
                Visibility="{Binding IsCancelling, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⟳" FontSize="16" Foreground="#E74C3C" Margin="0,0,10,0">
                    <TextBlock.RenderTransform>
                        <RotateTransform Angle="0" CenterX="8" CenterY="8"/>
                    </TextBlock.RenderTransform>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="TextBlock.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="(TextBlock.RenderTransform).(RotateTransform.Angle)"
                                                     From="0" To="360" Duration="0:0:1" RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>
                <TextBlock Text="{Binding StatusMessage}" FontSize="13" Foreground="#34495E" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Zamknij" 
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource ActionButton}"
                    Background="#95A5A6"/>
            <Button Content="🗑️ Anuluj zlecenie" 
                    Command="{Binding CancelOrderCommand}"
                    Style="{StaticResource ActionButton}"
                    Background="#E74C3C"/>
        </StackPanel>
    </Grid>
</Window>