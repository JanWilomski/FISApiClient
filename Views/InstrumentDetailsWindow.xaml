<Window x:Class="FISApiClient.Views.InstrumentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:FISApiClient.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="850" 
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter"/>
        
        <!-- Button Styles -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource InvertedTextBrush}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryHueDarkBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource DisabledTextBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{DynamicResource SecondaryTextBrush}"/>
        </Style>

        <Style x:Key="BuyButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#43A047"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SellButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53935"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="OrderTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="*" MinWidth="380"/>
        </Grid.ColumnDefinitions>

        <!-- Header (spanning all columns) -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Symbol}" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="{DynamicResource PrimaryHueDarkBrush}"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Name}" 
                              FontSize="16" 
                              Foreground="{DynamicResource SecondaryTextBrush}"
                              Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ISIN: " 
                                  FontSize="12" 
                                  Foreground="{DynamicResource DisabledTextBrush}"
                                  Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding ISIN}" 
                                  FontSize="12" 
                                  Foreground="{DynamicResource SecondaryTextBrush}"
                                  FontFamily="Consolas"/>
                        <TextBlock Text="GLID: " 
                                  FontSize="12" 
                                  Foreground="{DynamicResource DisabledTextBrush}"
                                  Margin="15,0,5,0"/>
                        <TextBlock Text="{Binding Glid}" 
                                  FontSize="12" 
                                  Foreground="{DynamicResource SecondaryTextBrush}"
                                  FontFamily="Consolas"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Button Content="ðŸ”„ OdÅ›wieÅ¼"
                           Command="{Binding RefreshCommand}"
                           Style="{StaticResource ActionButton}"
                           Margin="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content - Market Data -->
        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- Loading Overlay -->
                <Border Background="{DynamicResource WindowBackgroundBrush}"
                       Opacity="0.95"
                       CornerRadius="8"
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                       Panel.ZIndex="100">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="â³ Åadowanie danych..." 
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource PrimaryHueDarkBrush}"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                                  FontSize="13"
                                  Foreground="{DynamicResource SecondaryTextBrush}"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <StackPanel>
                    <!-- Price & Variation Section -->
                    <Border Style="{StaticResource CardBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Last Price -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="OSTATNIA CENA" 
                                          FontSize="11" 
                                          Foreground="{DynamicResource SecondaryTextBrush}" 
                                          Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding LastPrice}" 
                                          FontSize="36" 
                                          FontWeight="Bold"
                                          Foreground="{DynamicResource PrimaryTextBrush}"
                                          FontFamily="Consolas"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="WielkoÅ›Ä‡: " 
                                              FontSize="11" 
                                              Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    <TextBlock Text="{Binding LastQuantity}" 
                                              FontSize="11" 
                                              Foreground="{DynamicResource PrimaryTextBrush}"
                                              FontFamily="Consolas"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="Czas: " 
                                              FontSize="11" 
                                              Foreground="{DynamicResource SecondaryTextBrush}"/>
                                    <TextBlock Text="{Binding LastTradeTime}" 
                                              FontSize="11" 
                                              Foreground="{DynamicResource PrimaryTextBrush}"
                                              FontFamily="Consolas"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Variation -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock Text="ZMIANA" 
                                          FontSize="11" 
                                          Foreground="{DynamicResource SecondaryTextBrush}" 
                                          Margin="0,0,0,5"
                                          HorizontalAlignment="Right"/>
                                <Border Background="{Binding VariationColor}"
                                       CornerRadius="6"
                                       Padding="15,10">
                                    <TextBlock Text="{Binding PercentageVariation}" 
                                              FontSize="28" 
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              FontFamily="Consolas"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Order Book Section -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="ARKUSZ ZLECEÅƒ"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- BID -->
                                <Border Grid.Column="0" 
                                       Background="#1B5E20" 
                                       CornerRadius="6" 
                                       Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="KUPNO (BID)" 
                                                  FontSize="11" 
                                                  FontWeight="Bold"
                                                  Foreground="#A5D6A7" 
                                                  Margin="0,0,0,10"/>
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,5">
                                            <TextBlock Text="Cena: " 
                                                      FontSize="12" 
                                                      Foreground="{DynamicResource SecondaryTextBrush}"/>
                                            <TextBlock Text="{Binding BidPrice}" 
                                                      FontSize="20" 
                                                      FontWeight="Bold"
                                                      Foreground="#66BB6A"
                                                      FontFamily="Consolas"
                                                      Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Center">
                                            <TextBlock Text="Wolumen: " 
                                                      FontSize="11" 
                                                      Foreground="{DynamicResource SecondaryTextBrush}"/>
                                            <TextBlock Text="{Binding BidQuantity}" 
                                                      FontSize="11" 
                                                      Foreground="#A5D6A7"
                                                      FontFamily="Consolas"
                                                      Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- ASK -->
                                <Border Grid.Column="2" 
                                       Background="#B71C1C" 
                                       CornerRadius="6" 
                                       Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="SPRZEDAÅ» (ASK)" 
                                                  FontSize="11" 
                                                  FontWeight="Bold"
                                                  Foreground="#EF9A9A" 
                                                  Margin="0,0,0,10"/>
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,5">
                                            <TextBlock Text="Cena: " 
                                                      FontSize="12" 
                                                      Foreground="{DynamicResource SecondaryTextBrush}"/>
                                            <TextBlock Text="{Binding AskPrice}" 
                                                      FontSize="20" 
                                                      FontWeight="Bold"
                                                      Foreground="#EF5350"
                                                      FontFamily="Consolas"
                                                      Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Center">
                                            <TextBlock Text="Wolumen: " 
                                                      FontSize="11" 
                                                      Foreground="{DynamicResource SecondaryTextBrush}"/>
                                            <TextBlock Text="{Binding AskQuantity}" 
                                                      FontSize="11" 
                                                      Foreground="#EF9A9A"
                                                      FontFamily="Consolas"
                                                      Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Spread -->
                            <Border Background="{DynamicResource SurfaceLightBrush}" 
                                   CornerRadius="6" 
                                   Padding="10"
                                   Margin="0,15,0,0"
                                   BorderBrush="{DynamicResource BorderBrush}"
                                   BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Spread: " 
                                                  FontSize="12" 
                                                  Foreground="{DynamicResource SecondaryAccentBrush}"
                                                  FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Spread}" 
                                                  FontSize="12" 
                                                  Foreground="{DynamicResource SecondaryAccentBrush}"
                                                  FontWeight="Bold"
                                                  FontFamily="Consolas"
                                                  Margin="5,0,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Spread %: " 
                                                  FontSize="12" 
                                                  Foreground="{DynamicResource SecondaryAccentBrush}"
                                                  FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding SpreadPercentage}" 
                                                  FontSize="12" 
                                                  Foreground="{DynamicResource SecondaryAccentBrush}"
                                                  FontWeight="Bold"
                                                  FontFamily="Consolas"
                                                  Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Daily Statistics Section -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="STATYSTYKI DZIENNE"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Open -->
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                          Text="Otwarcie:" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource SecondaryTextBrush}"
                                          Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                          Text="{Binding OpenPrice}" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource PrimaryTextBrush}"
                                          FontWeight="SemiBold"
                                          FontFamily="Consolas"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,0,8"/>

                                <!-- High -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                          Text="High:" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource SecondaryTextBrush}"
                                          Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                          Text="{Binding HighPrice}" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource SuccessBrush}"
                                          FontWeight="SemiBold"
                                          FontFamily="Consolas"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,0,8"/>

                                <!-- Low -->
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                          Text="Low:" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource SecondaryTextBrush}"
                                          Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                          Text="{Binding LowPrice}" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource ErrorBrush}"
                                          FontWeight="SemiBold"
                                          FontFamily="Consolas"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,0,8"/>

                                <!-- Close -->
                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                          Text="ZamkniÄ™cie:" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource SecondaryTextBrush}"
                                          Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" 
                                          Text="{Binding ClosePrice}" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource PrimaryTextBrush}"
                                          FontWeight="SemiBold"
                                          FontFamily="Consolas"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,0,8"/>

                                <!-- Volume -->
                                <TextBlock Grid.Row="4" Grid.Column="0" 
                                          Text="Wolumen dzienny:" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" 
                                          Text="{Binding Volume}" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource PrimaryTextBrush}"
                                          FontWeight="SemiBold"
                                          FontFamily="Consolas"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Additional Info Section -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="DODATKOWE INFORMACJE"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="{DynamicResource PrimaryTextBrush}"
                                      Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Trading Phase -->
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                          Text="Faza notowaÅ„:" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource SecondaryTextBrush}"
                                          Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                          Text="{Binding TradingPhase}" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource PrimaryTextBrush}"
                                          FontWeight="SemiBold"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,0,8"/>

                                <!-- Suspension -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                          Text="Status zawieszenia:" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource SecondaryTextBrush}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                          Text="{Binding SuspensionIndicator}" 
                                          FontSize="13" 
                                          Foreground="{DynamicResource PrimaryTextBrush}"
                                          FontWeight="SemiBold"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Order Entry Panel -->
        <Border Grid.Row="1" Grid.Column="2" 
                Background="{DynamicResource SurfaceBrush}" 
                CornerRadius="8" 
                Padding="20"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Order Entry Header -->
                    <TextBlock Text="ðŸ“ NOWE ZLECENIE"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="{DynamicResource SecondaryAccentBrush}"
                              Margin="0,0,0,15"/>

                    <!-- SLE Connection Status -->
                    <Border Background="{Binding Path=IsSleConnected, Converter={StaticResource BooleanToVisibilityConverter}}"
                            CornerRadius="4"
                            Padding="10,6"
                            Margin="0,0,0,15">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSleConnected}" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Ellipse Width="8" Height="8" Fill="{DynamicResource InvertedTextBrush}" Margin="0,0,6,0"/>
                            <TextBlock FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource InvertedTextBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="SLE RozÅ‚Ä…czony"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSleConnected}" Value="True">
                                                <Setter Property="Text" Value="SLE PoÅ‚Ä…czony"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Quick Order Buttons -->
                    <TextBlock Text="Szybkie zlecenie:"
                              FontSize="12"
                              Foreground="{DynamicResource SecondaryTextBrush}"
                              Margin="0,0,0,8"/>
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                               Content="â¬† KUP po ASK"
                               Command="{Binding QuickBuyCommand}"
                               Style="{StaticResource BuyButton}"
                               Padding="12,8"
                               Margin="0"/>

                        <Button Grid.Column="2"
                               Content="â¬‡ SPRZEDAJ po BID"
                               Command="{Binding QuickSellCommand}"
                               Style="{StaticResource SellButton}"
                               Padding="12,8"
                               Margin="0"/>
                    </Grid>

                    <!-- Separator -->
                    <Border Height="1" Background="{DynamicResource BorderBrush}" Margin="0,0,0,20"/>

                    <!-- Side Selection -->
                    <TextBlock Text="Strona:"
                              FontSize="12"
                              Foreground="{DynamicResource SecondaryTextBrush}"
                              Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <RadioButton Content="Kupno"
                                    IsChecked="{Binding IsBuy}"
                                    GroupName="OrderSide"
                                    Margin="0,0,20,0"
                                    FontSize="13"
                                    Foreground="{DynamicResource PrimaryTextBrush}"/>
                        <RadioButton Content="SprzedaÅ¼"
                                    IsChecked="{Binding IsSell}"
                                    GroupName="OrderSide"
                                    FontSize="13"
                                    Foreground="{DynamicResource PrimaryTextBrush}"/>
                    </StackPanel>

                    <!-- Quantity -->
                    <TextBlock Text="IloÅ›Ä‡:"
                              FontSize="12"
                              Foreground="{DynamicResource SecondaryTextBrush}"
                              Margin="0,0,0,8"/>
                    <TextBox Text="{Binding OrderQuantity, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource OrderTextBox}"
                            Margin="0,0,0,15"/>

                    <!-- Modality -->
                    <TextBlock Text="ModalnoÅ›Ä‡:"
                              FontSize="12"
                              Foreground="{DynamicResource SecondaryTextBrush}"
                              Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding Modalities}"
                             SelectedItem="{Binding SelectedModality}"
                             FontSize="13"
                             Padding="8,6"
                             Margin="0,0,0,15">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Price -->
                    <TextBlock Text="Cena:"
                              FontSize="12"
                              Foreground="{DynamicResource SecondaryTextBrush}"
                              Margin="0,0,0,8"/>
                    <TextBox Text="{Binding OrderPrice, UpdateSourceTrigger=PropertyChanged}"
                            IsEnabled="{Binding IsPriceEnabled}"
                            Style="{StaticResource OrderTextBox}"
                            Margin="0,0,0,15"/>

                    <!-- Validity -->
                    <TextBlock Text="WaÅ¼noÅ›Ä‡:"
                              FontSize="12"
                              Foreground="{DynamicResource SecondaryTextBrush}"
                              Margin="0,0,0,8"/>
                    <ComboBox ItemsSource="{Binding Validities}"
                             SelectedItem="{Binding SelectedValidity}"
                             FontSize="13"
                             Padding="8,6"
                             Margin="0,0,0,20">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                                        
                    <!-- Separator -->
                    <Border Height="1" Background="{DynamicResource BorderBrush}" Margin="0,0,0,20"/>

                    <!-- FIS Workstation Parameters (Collapsible) -->
                    <Expander Header="âš™ Parametry FIS Workstation" 
                              Foreground="{DynamicResource PrimaryTextBrush}"
                              IsExpanded="False"
                              Margin="0,0,0,15">
                        <StackPanel Margin="10,10,0,0">
                            <!-- Client Code Type -->
                            <TextBlock Text="Origin (Client Code Type):"
                                      FontSize="11"
                                      Foreground="{DynamicResource SecondaryTextBrush}"
                                      Margin="0,0,0,5"/>
                            <ComboBox SelectedValue="{Binding ClientCodeType}"
                                     FontSize="12"
                                     Padding="8,6"
                                     Margin="0,0,0,12">
                                <ComboBoxItem Content="Client (C)" Tag="C"/>
                                <ComboBoxItem Content="House (H)" Tag="H"/>
                                <ComboBoxItem Content="Liquidity Provider (L)" Tag="L"/>
                            </ComboBox>
                            
                            <!-- Clearing Account -->
                            <TextBlock Text="Clearing Account:"
                                      FontSize="11"
                                      Foreground="{DynamicResource SecondaryTextBrush}"
                                      Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ClearingAccount, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource OrderTextBox}"
                                    Margin="0,0,0,12"/>
                            
                            <!-- Allocation Code -->
                            <TextBlock Text="Allocation Code (Clearing Firm):"
                                      FontSize="11"
                                      Foreground="{DynamicResource SecondaryTextBrush}"
                                      Margin="0,0,0,5"/>
                            <TextBox Text="{Binding AllocationCode, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource OrderTextBox}"
                                    Margin="0,0,0,12"/>
                            
                            <!-- Floor Trader ID -->
                            <TextBlock Text="Floor Trader ID (Own Broker D):"
                                      FontSize="11"
                                      Foreground="{DynamicResource SecondaryTextBrush}"
                                      Margin="0,0,0,5"/>
                            <TextBox Text="{Binding FloorTraderId, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource OrderTextBox}"
                                    Margin="0,0,0,12"/>
                            
                            <!-- Client Reference -->
                            <TextBlock Text="Client Reference (Cl. Ref):"
                                      FontSize="11"
                                      Foreground="{DynamicResource SecondaryTextBrush}"
                                      Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ClientReference, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource OrderTextBox}"
                                    MaxLength="8"
                                    Margin="0,0,0,12"/>
                            
                            <!-- Memo -->
                            <TextBlock Text="Memo:"
                                      FontSize="11"
                                      Foreground="{DynamicResource SecondaryTextBrush}"
                                      Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Memo, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource OrderTextBox}"
                                    MaxLength="18"
                                    Margin="0,0,0,12"/>
                            
                            <!-- Second Client Code Type -->
                            <TextBlock Text="Originator Origin:"
                                      FontSize="11"
                                      Foreground="{DynamicResource SecondaryTextBrush}"
                                      Margin="0,0,0,5"/>
                            <ComboBox SelectedValue="{Binding SecondClientCodeType}"
                                     FontSize="12"
                                     Padding="8,6"
                                     Margin="0,0,0,12">
                                <ComboBoxItem Content="Any Origin (Space)" Tag=" "/>
                                <ComboBoxItem Content="PAM Origin (P)" Tag="P"/>
                                <ComboBoxItem Content="Broker (B)" Tag="B"/>
                                <ComboBoxItem Content="Internet (I)" Tag="I"/>
                                <ComboBoxItem Content="DMA (D)" Tag="D"/>
                                <ComboBoxItem Content="Cellphone (C)" Tag="C"/>
                            </ComboBox>
                            
                            <!-- Custom Field -->
                            <TextBlock Text="Custom (Client Free Field 1):"
                                      FontSize="11"
                                      Foreground="{DynamicResource SecondaryTextBrush}"
                                      Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ClientFreeField1, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource OrderTextBox}"
                                    MaxLength="16"
                                    Margin="0,0,0,12"/>
                            
                            <!-- Currency -->
                            <TextBlock Text="Currency:"
                                      FontSize="11"
                                      Foreground="{DynamicResource SecondaryTextBrush}"
                                      Margin="0,0,0,5"/>
                            <TextBox Text="{Binding Currency, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource OrderTextBox}"/>
                        </StackPanel>
                    </Expander>

                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Algo Strategy Button -->
                        <Button Grid.Column="0"
                                Content="âš¡ Algo"
                                Command="{Binding OpenAlgoStrategyCommand}"
                                Style="{StaticResource ActionButton}"
                                FontSize="14"
                                Padding="15,10"
                                Height="45"
                                Background="{DynamicResource SecondaryAccentBrush}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Margin="{TemplateBinding Padding}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F57C00"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#E65100"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Background" Value="{DynamicResource DisabledTextBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Send Order Button -->
                        <Button Grid.Column="2"
                                Content="ðŸš€ WyÅ›lij zlecenie"
                                Command="{Binding SendOrderCommand}"
                                Style="{StaticResource ActionButton}"
                                FontSize="14"
                                Padding="15,10"
                                Height="45"/>
                    </Grid>

                    <!-- Info Text -->
                    <TextBlock Text="â„¹ API V3 - Wszystkie zlecenia sÄ… wysyÅ‚ane z uÅ¼yciem FIS Trading API V3"
                              FontSize="10"
                              Foreground="{DynamicResource DisabledTextBrush}"
                              TextWrapping="Wrap"
                              Margin="0,15,0,0"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Status Bar (spanning columns 0 and 2) -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                Background="{DynamicResource SurfaceLightBrush}" 
                CornerRadius="6" 
                Padding="15,10"
                Margin="0,15,0,10"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1">
            <TextBlock Text="{Binding StatusMessage}" 
                      Foreground="{DynamicResource SecondaryTextBrush}"
                      FontSize="12"/>
        </Border>

        <!-- Close Button (spanning columns 0 and 2) -->
        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
               Content="Zamknij"
               Command="{Binding CloseCommand}"
               Style="{StaticResource CloseButton}"
               HorizontalAlignment="Center"
               Width="150"
               Height="40"/>
    </Grid>
</Window>
