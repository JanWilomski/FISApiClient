<Window x:Class="Cross_FIS_API_1._2.Views.InstrumentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Button Styles -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#757575"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Symbol}" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="#1976D2"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Name}" 
                              FontSize="16" 
                              Foreground="#666666"
                              Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ISIN: " 
                                  FontSize="12" 
                                  Foreground="#999999"
                                  Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding ISIN}" 
                                  FontSize="12" 
                                  Foreground="#666666"
                                  FontFamily="Consolas"/>
                        <TextBlock Text="GLID: " 
                                  FontSize="12" 
                                  Foreground="#999999"
                                  Margin="15,0,5,0"/>
                        <TextBlock Text="{Binding Glid}" 
                                  FontSize="12" 
                                  Foreground="#666666"
                                  FontFamily="Consolas"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Button Content="🔄 Odśwież"
                           Command="{Binding RefreshCommand}"
                           Style="{StaticResource ActionButton}"
                           Margin="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- Loading Overlay -->
                <Border Background="#F0F0F0"
                       Opacity="0.95"
                       CornerRadius="8"
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                       Panel.ZIndex="100">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⏳ Ładowanie danych..." 
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="#1976D2"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                                  FontSize="13"
                                  Foreground="#666666"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <StackPanel>
                    <!-- Price & Variation Section -->
                    <Border Style="{StaticResource CardBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Last Price -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="OSTATNIA CENA" 
                                          FontSize="11" 
                                          Foreground="#999999" 
                                          Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding LastPrice}" 
                                          FontSize="36" 
                                          FontWeight="Bold"
                                          Foreground="#333333"
                                          FontFamily="Consolas"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Wielkość: " 
                                              FontSize="11" 
                                              Foreground="#999999"/>
                                    <TextBlock Text="{Binding LastQuantity}" 
                                              FontSize="11" 
                                              Foreground="#666666"
                                              FontFamily="Consolas"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                    <TextBlock Text="Czas: " 
                                              FontSize="11" 
                                              Foreground="#999999"/>
                                    <TextBlock Text="{Binding LastTradeTime}" 
                                              FontSize="11" 
                                              Foreground="#666666"
                                              FontFamily="Consolas"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Variation -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock Text="ZMIANA" 
                                          FontSize="11" 
                                          Foreground="#999999" 
                                          Margin="0,0,0,5"
                                          HorizontalAlignment="Right"/>
                                <Border Background="{Binding VariationColor}"
                                       CornerRadius="6"
                                       Padding="15,10">
                                    <TextBlock Text="{Binding PercentageVariation}" 
                                              FontSize="28" 
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              FontFamily="Consolas"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Order Book Section -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="ARKUSZ ZLECEŃ"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="#333333"
                                      Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- BID -->
                                <Border Grid.Column="0" 
                                       Background="#E8F5E9" 
                                       CornerRadius="6" 
                                       Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="KUPNO (BID)" 
                                                  FontSize="11" 
                                                  FontWeight="Bold"
                                                  Foreground="#2E7D32" 
                                                  Margin="0,0,0,10"/>
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,5">
                                            <TextBlock Text="Cena: " 
                                                      FontSize="12" 
                                                      Foreground="#666666"/>
                                            <TextBlock Text="{Binding BidPrice}" 
                                                      FontSize="20" 
                                                      FontWeight="Bold"
                                                      Foreground="#2E7D32"
                                                      FontFamily="Consolas"
                                                      Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Center">
                                            <TextBlock Text="Wolumen: " 
                                                      FontSize="11" 
                                                      Foreground="#666666"/>
                                            <TextBlock Text="{Binding BidQuantity}" 
                                                      FontSize="11" 
                                                      Foreground="#2E7D32"
                                                      FontFamily="Consolas"
                                                      Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- ASK -->
                                <Border Grid.Column="2" 
                                       Background="#FFEBEE" 
                                       CornerRadius="6" 
                                       Padding="15">
                                    <StackPanel>
                                        <TextBlock Text="SPRZEDAŻ (ASK)" 
                                                  FontSize="11" 
                                                  FontWeight="Bold"
                                                  Foreground="#C62828" 
                                                  Margin="0,0,0,10"/>
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,5">
                                            <TextBlock Text="Cena: " 
                                                      FontSize="12" 
                                                      Foreground="#666666"/>
                                            <TextBlock Text="{Binding AskPrice}" 
                                                      FontSize="20" 
                                                      FontWeight="Bold"
                                                      Foreground="#C62828"
                                                      FontFamily="Consolas"
                                                      Margin="5,0,0,0"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Center">
                                            <TextBlock Text="Wolumen: " 
                                                      FontSize="11" 
                                                      Foreground="#666666"/>
                                            <TextBlock Text="{Binding AskQuantity}" 
                                                      FontSize="11" 
                                                      Foreground="#C62828"
                                                      FontFamily="Consolas"
                                                      Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- Spread -->
                            <Border Background="#FFF3E0" 
                                   CornerRadius="6" 
                                   Padding="10"
                                   Margin="0,15,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Spread: " 
                                                  FontSize="12" 
                                                  Foreground="#E65100"
                                                  FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Spread}" 
                                                  FontSize="12" 
                                                  Foreground="#E65100"
                                                  FontWeight="Bold"
                                                  FontFamily="Consolas"
                                                  Margin="5,0,0,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Spread %: " 
                                                  FontSize="12" 
                                                  Foreground="#E65100"
                                                  FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding SpreadPercentage}" 
                                                  FontSize="12" 
                                                  Foreground="#E65100"
                                                  FontWeight="Bold"
                                                  FontFamily="Consolas"
                                                  Margin="5,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Daily Statistics Section -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="STATYSTYKI DZIENNE"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="#333333"
                                      Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Open -->
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                          Text="Otwarcie:" 
                                          FontSize="13" 
                                          Foreground="#666666"
                                          Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                          Text="{Binding OpenPrice}" 
                                          FontSize="13" 
                                          Foreground="#333333"
                                          FontWeight="SemiBold"
                                          FontFamily="Consolas"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,0,8"/>

                                <!-- High -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                          Text="Maksimum:" 
                                          FontSize="13" 
                                          Foreground="#666666"
                                          Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                          Text="{Binding HighPrice}" 
                                          FontSize="13" 
                                          Foreground="#4CAF50"
                                          FontWeight="SemiBold"
                                          FontFamily="Consolas"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,0,8"/>

                                <!-- Low -->
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                          Text="Minimum:" 
                                          FontSize="13" 
                                          Foreground="#666666"
                                          Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                          Text="{Binding LowPrice}" 
                                          FontSize="13" 
                                          Foreground="#F44336"
                                          FontWeight="SemiBold"
                                          FontFamily="Consolas"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,0,8"/>

                                <!-- Close -->
                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                          Text="Zamknięcie:" 
                                          FontSize="13" 
                                          Foreground="#666666"
                                          Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" 
                                          Text="{Binding ClosePrice}" 
                                          FontSize="13" 
                                          Foreground="#333333"
                                          FontWeight="SemiBold"
                                          FontFamily="Consolas"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,0,8"/>

                                <!-- Volume -->
                                <TextBlock Grid.Row="4" Grid.Column="0" 
                                          Text="Wolumen dzienny:" 
                                          FontSize="13" 
                                          Foreground="#666666"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" 
                                          Text="{Binding Volume}" 
                                          FontSize="13" 
                                          Foreground="#333333"
                                          FontWeight="SemiBold"
                                          FontFamily="Consolas"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Additional Info Section -->
                    <Border Style="{StaticResource CardBorder}">
                        <StackPanel>
                            <TextBlock Text="DODATKOWE INFORMACJE"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Foreground="#333333"
                                      Margin="0,0,0,15"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Trading Phase -->
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                          Text="Faza notowań:" 
                                          FontSize="13" 
                                          Foreground="#666666"
                                          Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                          Text="{Binding TradingPhase}" 
                                          FontSize="13" 
                                          Foreground="#333333"
                                          FontWeight="SemiBold"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,0,8"/>

                                <!-- Suspension -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                          Text="Status zawieszenia:" 
                                          FontSize="13" 
                                          Foreground="#666666"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                          Text="{Binding SuspensionIndicator}" 
                                          FontSize="13" 
                                          Foreground="#333333"
                                          FontWeight="SemiBold"
                                          HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#263238" 
                CornerRadius="6" 
                Padding="15,10"
                Margin="0,15,0,10">
            <TextBlock Text="{Binding StatusMessage}" 
                      Foreground="White"
                      FontSize="12"/>
        </Border>

        <!-- Close Button -->
        <Button Grid.Row="3"
               Content="Zamknij"
               Command="{Binding CloseCommand}"
               Style="{StaticResource CloseButton}"
               HorizontalAlignment="Center"
               Width="150"
               Height="40"/>
    </Grid>
</Window>
